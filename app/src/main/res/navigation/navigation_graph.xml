<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.attendancelogger.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_student_main"
            app:destination="@id/studentMain"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_professor_main"
            app:destination="@id/professorMain"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/studentMain"
        android:name="com.example.attendancelogger.StudentMainFragment"
        android:label="fragment_student_main"
        tools:layout="@layout/fragment_student_main" >
        <action
            android:id="@+id/action_studentMain_to_bluetoothMarkingFragment"
            app:destination="@id/bluetoothMarkingFragment" />
    </fragment>
    <fragment
        android:id="@+id/professorMain"
        android:name="com.example.attendancelogger.ProfessorMainFragment"
        android:label="fragment_professor_main"
        tools:layout="@layout/fragment_professor_main" >
        <action
            android:id="@+id/action_professor_mark_manually"
            app:destination="@id/manualMarkingFragment"
            app:popUpTo="@id/professorMain" />
        <action
            android:id="@+id/action_professorMain_to_startGatheringFragment"
            app:destination="@id/startGatheringFragment" />
    </fragment>
    <fragment
        android:id="@+id/manualMarkingFragment"
        android:name="com.example.attendancelogger.ManualMarkingFragment"
        android:label="fragment_manual_marking"
        tools:layout="@layout/fragment_manual_marking" />
    <fragment
        android:id="@+id/bluetoothMarkingFragment"
        android:name="com.example.attendancelogger.BluetoothMarkingFragment"
        android:label="fragment_try_mark_me_on_this_subject"
        tools:layout="@layout/fragment_try_mark_me_on_this_subject" />
    <fragment
        android:id="@+id/startGatheringFragment"
        android:name="com.example.attendancelogger.StartGatheringFragment"
        android:label="fragment_start_gathering"
        tools:layout="@layout/fragment_start_gathering" />
</navigation>